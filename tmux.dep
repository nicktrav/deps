VERSION = "2.9a"

tmux_macos = dep(
  name = 'tmux-macos',
  requires = [],
  met = [shell("tmux -V | grep {}".format(VERSION))],
  meet = [shell("brew install tmux")],
  enable = os() == 'darwin',
)

tmux_linux = dep(
  name = 'tmux-linux',
  requires = [],
  met = [shell("which tmux")],
  meet = [shell("apt-get install -y tmux")],
  enable = os() == 'linux',
)

tmux = dep(
  name = 'tmux',
  requires = [tmux_linux, tmux_macos],
)
