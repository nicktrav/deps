VERSION = "2.9a"

tmux_macos = dep(
  name = 'tmux-macos',
  requires = [],
  met = [shell("tmux -V | grep {}".format(VERSION))],
  meet = [shell("brew install tmux")],
)

tmux_linux = dep(
  name = 'tmux-linux',
  requires = [],
  met = [shell("which tmux")],
  meet = [shell("apt-get install -y tmux")],
)

def _tmux():
  if os() == 'linux':
    return tmux_linux
  elif os() == 'darwin':
    return tmux_macos

tmux = dep(
  name = 'tmux',
  requires = [_tmux()],
)
